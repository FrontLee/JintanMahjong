<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StatisticsActivity" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/head1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hubearing1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF00FF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/huaccount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF00FF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/head2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hubearing2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF00FF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/huaccount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF00FF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/head3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hubearing3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF00FF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/huaccount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF00FF"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="30dp"
        android:background="@drawable/next"
        android:contentDescription="@string/controlDes"
        android:onClick="ControlOnClick"
        android:scaleType="fitXY" />

</LinearLayout>