<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vinson.mahjong.jintan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.vinson.mahjong.system.App">
        <activity
            android:name="com.vinson.mahjong.jintan.MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.vinson.mahjong.jintan.TestActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.vinson.mahjong.jintan.ThemeActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout"
            android:label="@string/title_activity_theme"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.vinson.mahjong.jintan.StatisticsActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout"
            android:label="@string/title_activity_account"
            android:screenOrientation="landscape"
            android:theme="@style/translucent" >
        </activity>
        <activity
            android:name="com.vinson.mahjong.jintan.ModeSelectorActivity"
            android:alwaysRetainTaskState="true"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout"
            android:label="@string/title_activity_mode_selector"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.vinson.mahjong.Communication.ConnectionService"
            android:process=":remote" >
        </service>
        <service
            android:name="com.vinson.mahjong.Communication.BlueToothConnection"
            android:process=":remote" >
        </service>

        <activity
            android:name="com.vinson.mahjong.jintan.ServerActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout"
            android:label="@string/title_activity_server"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.vinson.mahjong.jintan.StandAloneActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout"
            android:keepScreenOn="true"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>